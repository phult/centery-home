<div class="col-md-4 col-sm-6 col-xs-12" ng-repeat="switch in switches">
    <div class="info-box {{getSwitchColor(switch)}}">
        <span ng-click="changeState(switch)" class="info-box-icon js-command"><i class="fa {{getSwitchIcon(switch)}}"></i></span>
        <div class="info-box-content">
            <span class="info-box-number">{{switch.name}}</span>
            <span class="info-box-text">{{switch.address}}</span>
            <div class="progress">
                <div class="progress-bar" style="width: 0%"></div>
            </div>
            <span class="label js-command" ng-click="remove(switch)"><i class="fa fa-remove"></i> Remove</span>
            <span class="label js-command" ng-click="rename(switch);" data-toggle="modal" data-target="#switchRenamingDialog"><i class="fa fa-edit"></i> Rename</span>
        </div>
    </div>
</div>
<%- include('switch-renaming-dialog') %>
